<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:background="#FF1E1E1E">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Select A Prime Helix Card"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@drawable/frameborder"
            android:layout_margin="4dp"
            android:padding="2dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:tag="The_Archmagus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/card_the_archmagus"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:onClick="PrimeSelected" />

        <ImageView
            android:tag="The_Centurion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/card_the_centurion"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:onClick="PrimeSelected" />

        <ImageView
            android:tag="The_Warlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/card_the_warlord"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:onClick="PrimeSelected" />
    </TableRow>

</LinearLayout>